<div class="d-flex justify-content-center flex-column">
<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Question:</strong>
  <%= @exercise.question %>
</p>

<p>
  <strong>Answer:</strong>
  <%= @exercise.answer %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @exercise.difficulty %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @exercise.subject_id %>
</p>

<p>
  <strong>Streak:</strong>
  <%= cookies.fetch(:streak_counter) %>
</p>

<p>
  <strong>User Level:</strong>
  <%= cookies.fetch(:user_level) %>
</p>

<%= form_with(url: attempts_path) do |form| %>
  <%= hidden_field_tag "starting_timestamp", cookies.fetch(:attempt_started_at) %>

  <div class="form-outline prompt2">
    <%= label_tag :submission_box, "Your Answer:"%>

    <%= text_field_tag :query_submission %>    
    <%= hidden_field_tag "query_user_id", current_user.id %>
    <%= hidden_field_tag "query_exercise_id", @exercise.id %>
    <%= hidden_field_tag "query_round_id", cookies.fetch(:current_round) %>
  

  <%= button_tag "Submit", class: "btn btn-dark" %>

  </div>
<% end %>


<%= link_to 'Edit', edit_exercise_path(@exercise) %> |
<%= link_to 'Back', exercises_path %>
</div>
</div>
