<h1>My Students' Plans</h1>

<table>
  <thead>
    <tr>
      <th>Tutor</th>
      <th>Student</th>
      <th>Subject</th>
      <th>Round size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.tutor_id %></td>
        <td><%= plan.student_id %></td>
        <td><%= plan.subject_id %></td>
        <td><%= plan.round_size %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_with(url: plans_path) do |form| %>
  <div class="form-outline prompt2">
    <%= label_tag :submit_student, "Your Student's ID:"%>
    <%= text_field_tag :query_student_id %>    
    <br>
    <%= label_tag :submit_subject, "Subject ID:"%>
    <%= text_field_tag :query_subject_id %>  
    <br>
    <%= label_tag :submit_round_size, "Round Size:"%>  
    <%= text_field_tag :query_round_size %>    
    <br>
  <%= button_tag "Submit", class: "btn btn-dark" %>

  </div>
<% end %>
